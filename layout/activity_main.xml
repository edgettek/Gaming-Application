<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LinearLayout_PlayerNames"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="@string/title_names"
            android:gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/hint_player1Name"
            android:id="@+id/EditText_P1"
            android:gravity="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/hint_player2Name"
            android:id="@+id/EditText_P2"
            android:gravity="center"/>

        <Button
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/OK"
            android:id="@+id/Button_OKPlayerNames"
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/LinearLayout_CurrentScore"
        android:layout_below="@id/LinearLayout_PlayerNames"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/title_Score"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/hint_player1Name"
                android:id="@+id/TextView_P1Name"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/TextView_P1Score"
                android:text="@string/main_P1Score"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="@string/hint_player2Name"
                android:id="@+id/TextView_P2Name"
                android:gravity="center"
                android:textStyle="bold"/>

            <TextView
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:id="@+id/TextView_P2Score"
                android:text="@string/main_P2Score"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout_CurrentScore"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/title_Games"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/button_StartTicTac"
            android:text="@string/button_startTicTacToe"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/button_StartHangMan"
            android:text="@string/button_startHangMan"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/button_StartConnect4"
            android:text="@string/button_startConnect4"/>







    </LinearLayout>


</RelativeLayout>
